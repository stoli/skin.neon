      <posx>40</posx>
      <posy>80</posy>
      <width>1280</width>
      <height>700</height>
      <scrolltime>300</scrolltime>
      <orientation>horizontal</orientation>
      <pagecontrol>60</pagecontrol>
      <viewtype label="$LOCALIZE[31141]">Panel</viewtype>
      <onleft>594</onleft>
      <onright>594</onright>
      <onup>7000</onup>
      <ondown>7000</ondown>
      <preloaditems>2</preloaditems>
      <include>Animation_BackdropFade</include>
