<?xml version="1.0" encoding="utf-8"?>
<!--Alaska-->
<window id="500">
  <defaultcontrol>506</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <views>506,50,52,54,508,511,512</views>
  <controls>
    <control type="image">
      <description>artist level fanart</description>
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture fallback="backdrops/curtains.jpg" background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
      <aspectratio>scale</aspectratio>
      <fadetime>400</fadetime>
      <include>VisibleFadeEffect</include>
    </control>
    <include>MusicInfoListView</include>
    <include>Viewtype_Files</include>
    <include>Viewtype_JukeBox</include>
    <!-- view options -->
    <include>Time</include>
    <include>ScrollOffsetLabel</include>
    <!-- <include>7000_has_focus</include>-->
    <control type="image">
      <!-- Floor -->
      <posx>0</posx>
      <posy>650</posy>
      <width>1280</width>
      <height>70</height>
      <colordiffuse>mainblue</colordiffuse>
      <texture>mainmenu/home_bottom_white.png</texture>
      <visible>ControlGroup(7000).HasFocus() + !Skin.HasSetting(LockViews)</visible>
      <include>Animation_Fade75</include>
    </control>
    <control type="grouplist" id="7000">
      <visible>Window.IsActive(500)</visible>
      <width>1280</width>
      <height>40</height>
      <posx>190</posx>
      <onup>50</onup>
      <ondown>50</ondown>
      <itemgap>0</itemgap>
      <visible allowhiddenfocus="true">ControlGroup(7000).HasFocus() + !Skin.HasSetting(LockViews)</visible>
      <orientation>horizontal</orientation>
      <posy>678</posy>
      <!-- shuffle -->
      <control type="button" id="30">
        <include>WindowMenuButton</include>
        <label>$INFO[Container.ViewMode]</label>
        <onclick>Container.NextViewMode</onclick>
      </control>
      <control type="button" id="20">
        <description>Shuffle</description>
        <label>$LOCALIZE[191]</label>
        <include>WindowMenuButton</include>
      </control>
      <!-- randomize -->
      <control type="button" id="28">
        <description>randomize</description>
        <label>$LOCALIZE[13319]</label>
        <include>WindowMenuButton</include>
        <onclick>PlayerControl(random)</onclick>
      </control>
      <!-- repeat -->
      <control type="button" id="26">
        <description>repeat</description>
        <include>WindowMenuButton</include>
      </control>
      <!-- save -->
      <control type="button" id="21">
        <description>save</description>
        <label>$LOCALIZE[190]</label>
        <include>WindowMenuButton</include>
      </control>
      <!-- clear -->
      <control type="button" id="22">
        <description>clear</description>
        <label>$LOCALIZE[192]</label>
        <include>WindowMenuButton</include>
        <onclick>ActivateWindow(weathersettings)</onclick>
      </control>
    </control>
    <control type="grouplist">
      <width>1280</width>
      <height>40</height>
      <posx>0</posx>
      <visible>!Skin.HasSetting(LockViews)</visible>
      <include>WindowMenuVars</include>
      <posy>655</posy>
      <!-- shuffle -->
      <control type="button" id="7040">
        <include>WindowMenuLabel</include>
        <label>$LOCALIZE[31088]</label>
      </control>
      <control type="button" id="7040">
        <include>WindowMenuLabel</include>
        <label>PlayList</label>
      </control>
      <!-- randomize -->
      <control type="button" id="7041">
        <include>WindowMenuLabel</include>
        <label>Play</label>
      </control>
      <!-- repeat -->
      <control type="button" id="7042">
        <include>WindowMenuLabel</include>
        <label>song</label>
      </control>
      <!-- save -->
      <control type="button" id="7041">
        <include>WindowMenuLabel</include>
        <label>Playlist</label>
      </control>
      <!-- clear -->
      <control type="button" id="7042">
        <include>WindowMenuLabel</include>
        <label>Playlist</label>
      </control>
    </control>
  </controls>
</window>